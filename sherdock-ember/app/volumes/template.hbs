<h2>
  Volumes
  <button class="btn btn-primary pull-right" {{action "removeAll"}}><i class="fa fa-trash"></i> All Orphans</button>
</h2>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th width="100">ID</th>
      <th width="100">Container</th>
      <th colspan="2">Path</th>
      <th width="80">In Use</th>
      <th width="80">&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    {{#each volume in this}}
      <tr {{bind-attr class="volume.Attached:info"}}>
        <td rowspan="2">{{short-id volume.ID}}&hellip;</td>
        <td rowspan="2">{{short-id volume.ContainerID}}&hellip;</td>
        <td width="80">Host:</td>
        <td>
          {{volume.DockerPath}}
        </td>
        <td rowspan="2">{{#if volume.Attached}}Yes{{else}}<span class="text-muted">No</span>{{/if}}</td>
        <td rowspan="2" align="center">
          {{#unless volume.Attached}}
            <button class="btn btn-lg btn-primary" {{action "remove" volume.ID}}><i class="fa fa-trash"></i></button>
          {{/unless}}
        </td>
      </tr>
      <tr {{bind-attr class="volume.Attached:info"}}>
        <td width="80">Container:</td>
        <td>
          {{volume.ContainerPath}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
